---
import { markdownify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";
import { FaCheck } from "react-icons/fa/index.js";
import JoinWaitlist from "../SingupForm";
const { features } = Astro.props;

---
<!-- Features -->

<section class="section p-2 bg-gradient">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-8">
          <h2 set:html={markdownify("Key Components of Framework")} class="" />
        </div>
      </div>
    </div>
</section>
{   
    
    features.map((feature, index: number) => (
        <section class={`section-sm ${index % 2 === 0 && "bg-gradient"}`}>
            <div class="container">
                <div class="row items-center justify-between">
                {feature.image && (<div
                    class={`mb:md-0 mb-6 md:col-5 ${index % 2 !== 0 && "md:order-2"}`}
                >   
                    <Image
                    src={feature.image}
                    height={480}
                    width={520}
                    fit="contain"
                    background="rgba(0,0,0,0)"
                    alt={feature.title}
                    format="webp"
                    />
                </div>
                <div class={`md:col-7 lg:col-6 ${index % 2 !== 0 && "md:order-1"}`}>
                    <h2 set:html={markdownify(feature.title)} class="mb-4" />
                    <p set:html={markdownify(feature.content)} class="mb-8 text-lg" />
                    <ul>
                    {feature.bulletpoints.map((bullet: string) => (
                        <li class="relative mb-4 pl-6">
                        <FaCheck className={"absolute left-0 top-1.5"} />
                        <span set:html={markdownify(bullet)} />
                        </li>
                    ))}
                    </ul>
                    {feature.button.enable && (
                    <a class="btn btn-primary mt-5" href={feature.button.link}>
                        {feature.button.label}
                    </a>
                    )}
                    {feature.waitlist && feature.waitlist.enable && (
                        <JoinWaitlist client:load></JoinWaitlist>
                    )}
                </div>)}
                {!feature.image && (
                    <div class={`md:col-6 lg:col-6 ml-0 mb-6`}>   
                        <h2 set:html={markdownify(feature.title)} class="mb-4" />
                        <p set:html={markdownify(feature.content)} class="mb-8 text-lg" />
                        <ul>
                        {feature.bulletpoints.map((bullet: string) => (
                            <li class="relative mb-4 pl-6">
                            <FaCheck className={"absolute left-0 top-1.5"} />
                            <span set:html={markdownify(bullet)} />
                            </li>
                        ))}
                        </ul>
                        {feature.button.enable && (
                        <a class="btn btn-primary mt-5" href={feature.button.link}>
                            {feature.button.label}
                        </a>
                        )}
                        {feature.waitlist && feature.waitlist.enable && (
                            <JoinWaitlist client:load></JoinWaitlist>
                        )}
                    </div>
                    <div class={`md:col-6 lg:col-6 ml-0`}>
                        <h2 set:html={markdownify(feature.title2)} class="mb-4" />
                        <p set:html={markdownify(feature.content2)} class="mb-8 text-lg" />
                        <ul>
                        {feature.bulletpoints2.map((bullet: string) => (
                            <li class="relative mb-4 pl-6">
                            <FaCheck className={"absolute left-0 top-1.5"} />
                            <span set:html={markdownify(bullet)} />
                            </li>
                        ))}
                        </ul>
                        {feature.button2.enable && (
                        <a class="btn btn-primary mt-5" href={feature.button2.link}>
                            {feature.button2.label}
                        </a>
                        )}
                        {feature.waitlist2 && feature.waitlist2.enable && (
                            <JoinWaitlist client:load></JoinWaitlist>
                        )}
                    </div>)}

                    
                
                </div>
            </div>
        </section>
    ))
}
<!-- /Features -->